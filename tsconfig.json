{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "jest.setup.ts",
    "src/benchmark-*.ts",
    "src/final-benchmark.ts",
    "src/benchmark-cpu-sequential.ts",
    "src/benchmark-mixed-sequential.ts"
  ]
}
