{
  "author": "Jonathan Givisiez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j-givisiez/pg-parallel/issues"
  },
  "homepage": "https://github.com/j-givisiez/pg-parallel#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j-givisiez/pg-parallel.git"
  },
  "name": "pg-parallel",
  "version": "1.2.0",
  "description": "A specialized Node.js wrapper for `node-postgres` that prevents event-loop blocking by offloading heavy CPU tasks and complex transactions to worker threads.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "docs": "typedoc",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install",
    "test": "npm run build && jest",
    "test:dist": "npm run build && node dist-test.js",
    "benchmark": "ts-node src/benchmarks/benchmark.ts",
    "deploy": "npm run build && npm publish"
  },
  "keywords": [
    "pg",
    "postgres",
    "postgresql",
    "pool",
    "parallel",
    "worker",
    "worker_threads",
    "performance",
    "cpu",
    "non-blocking",
    "scaling"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.21",
    "@types/pdfkit": "^0.14.0",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "pg": "^8.11.3"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{js,ts,json,css,scss}": "prettier --write"
  }
}
